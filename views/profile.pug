extends layout

block variables
    - var title = 'Profile'

block scripts
    script(src="/javascripts/profile.js")

block stylesheets
    link(rel="stylesheet" href="/stylesheets/profile.css")

block content
    if user.id != profileUser.id
        .display-5.border-bottom.ps-5.mx-3 
            span.text-muted #{profileAlias}
            span 's profile 
            if profileRoleSuper == 1
                sup
                    i.fas.fa-crown.state-icon(data-bs-toggle="tooltip" data-bs-placement="right" title="I'm an admin!")
            if profileUser.status == "RECOVERY"
                sup
                    i.fas.fa-plus-circle.state-icon(data-bs-toggle="tooltip" data-bs-placement="right" title="user pending recovery.")
            
    else
        .display-5.border-bottom.ps-5.mx-3 Your profile 
            if profileRoleSuper == 1
                sup
                    i.fas.fa-crown.state-icon(data-bs-toggle="tooltip" data-bs-placement="right" title="user us an admin.")
            if profileUser.status == "RECOVERY"
                sup
                    i.fas.fa-plus-circle.state-icon(data-bs-toggle="tooltip" data-bs-placement="right" title="user pending recovery.")

    .row.gutters-sm.mx-5.mt-5.px-5
        .col-md-4.mb-3
            .card
                .card-body
                    .d-flex.flex-column.align-items-center.text-center
                        if !profilePicture
                            img.rounded-circle(src="https://simplyilm.com/wp-content/uploads/2017/08/temporary-profile-placeholder-1.jpg" width="150")
                        else
                            img.rounded-circle(src="data:image/png;base64," + profilePicture width="150")
                        .mt-3
                            h4 #{profileUser.profile.firstName} #{profileUser.profile.lastName}
                            p.text-secondary.mb-1 [PLACEHOLDER] Senior Restroom Attendant
                            p.text-muted.font-size-sm [PLACEHOLDER] Brussels Area, Belgium
                            p.text-muted.font-size-sm 
                                a.btn.btn-primary(href="mailto:" + profileUser.profile.email) e-mail
                                if userIsSuper
                                    span.mx-1
                                    a.btn.btn-outline-primary(href="/" id="resetPassword" user=profileUser.id) Reset password
            .card.mt-3
                ul.list-group.list-group-flush
                    li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                        h6.mb-0
                            svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline")
                                circle(cx="12" cy="12" r="10")
                                line(x1="2" y1="12" x2="22" y2="12")
                                path(d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z") Website
                        span.text-secondary https://bootdey.com
                    li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                        h6.mb-0
                            svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github mr-2 icon-inline")
                                path(d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22") Github
                        span.text-secondary bootdey
                    li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                        h6.mb-0
                            svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info")
                                path(d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z") Twitter
                        span.text-secondary @bootdey
                    li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                        h6.mb-0
                            svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger")
                                rect(x="2" y="2" width="20" height="20" rx="5" ry="5")
                                path(d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z")
                                line(x1="17.5" y1="6.5" x2="17.51" y2="6.5") Instagram
                        span.text-secondary bootdey
                    li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                        h6.mb-0
                            svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary")
                                path(d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z") Facebook
                        span.text-secondary bootdey

        .col-md-8
            .card.mb-3
                .card-body
                    .row
                        .col-sm-3
                            h6.mb-0 Alias
                        .col-sm-9.text-secondary #{profileAlias}
                    hr
                    .row
                        .col-sm-3
                            h6.mb-0 Full Name
                        .col-sm-9.text-secondary #{profileUser.profile.firstName} #{profileUser.profile.lastName}
                    hr
                    .row
                        .col-sm-3
                            h6.mb-0 Email
                        .col-sm-9.text-secondary #{profileUser.profile.email}
                    hr
                    .row
                        .col-sm-3
                            h6.mb-0 Secondary email
                        .col-sm-9.text-secondary #{profileUser.profile.secondaryEmail}
                    hr
                    .row
                        .col-sm-3
                            h6.mb-0 Mobile
                        .col-sm-9.text-secondary #{profileUser.profile.mobilePhone}
                    hr
                    .row
                        .col-sm-12
                            a.btn.btn-primary(href="/" id="editProfile" user=profileUser.id) Edit
